# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

# Windows-style newlines with a newline ending
[*.{cmd,ps1,cmd.tmpl,ps1.tmpl}]
end_of_line = crlf



# Windows-style newlines with a newline ending
[*.sh.cmd.tmpl]
end_of_line = lf
