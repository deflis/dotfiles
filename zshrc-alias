## Alias configuration
#
# expand aliases before completing
#

setopt complete_aliases     # aliased ls needs if file/dir completions work

alias where="command -v"
alias j="jobs -l"

case "${OSTYPE}" in
freebsd*|darwin*)
    if which gls >& /dev/null; then
        alias ls="gls --color"
    else
        alias ls="ls -G -w"
    fi
    ;;
linux*)
    alias ls="ls --color"
    ;;
esac

alias la="ls -a"
alias lf="ls -F"
alias ll="ls -al"

alias du="du -h"
alias df="df -h"

alias su="su -l"

alias emacs=vim
alias tmuxx='~/dotfiles/tmuxx.sh'

if which mvim >& /dev/null; then
    alias gvim=mvim
elif which gvim >& /dev/null; then
    alias mvim=gvim
else
    alias gvim=vim
    alias mvim=vim
fi;

